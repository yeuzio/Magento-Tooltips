<?xml version="1.0"?>
<config>
    <modules>
        <Qshops_Tooltip>
            <version>0.1.0</version>
        </Qshops_Tooltip>
    </modules> 
    <global>
        <blocks>
            <tooltipblock>
                <class>Qshops_Tooltip_Block</class>
            </tooltipblock>
        </blocks>
        <helpers>
            <tooltiphelper>
                <class>Qshops_Tooltip_Helper</class>
            </tooltiphelper>
        </helpers>
    </global>
    <frontend>
        <events>
            <core_block_abstract_to_html_after>
                <observers>
                    <qshops_tooltip>
                        <type>singleton</type>
                        <class>Qshops_Tooltip_Model_Observer</class>
                        <method>AddTooltip</method>
                    </qshops_tooltip>
                </observers>
            </core_block_abstract_to_html_after>     
        </events>
    </frontend>
    <adminhtml>
        <acl>
            <resources>
		<admin>
                    <children>
                        <system>
                            <children>
				<config>
                                    <children>
					<tooltip translate="title" module="tooltiphelper">
                                            <title>Qshops</title>
                                            <sort_order>90</sort_order>
					</tooltip>
                                    </children>
				</config>
                            </children>
			</system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>